{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@": ["src"],

			"@assets": ["src/assets"],
			"@classes": ["src/classes"],
			"@config": ["src/config"],
			"@events": ["src/events"],
			"@root": ["src/root/index"],
			"@themes": ["src/themes"],
			"@/*": ["src/*"],

			"@assets/*": ["src/assets/*"],
			"@classes/*": ["src/classes/*"],
			"@config/*": ["src/config/*"],
			"@events/*": ["src/events/*"],
			"@root/*": ["src/root/*"],
			"@themes/*": ["src/themes/*"]
		}
	},
	"include": ["src"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
